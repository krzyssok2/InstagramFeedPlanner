@inherits LayoutComponentBase

<div class="layout-wrapper white-mode">
    <div class="topbar">
        <TopBar />
    </div>

    <div class="main-content">
        @Body
    </div>

    <div class="bottombar">
        <Footer />
    </div>
</div>

<style>
    .dark-mode {
        --text: #E0E0E0;
        --placeholder: #AAAAAA;
        --background: #1A1A1A;
        --primary: #444444;
        --secondary: #888888;
        --accent: #FF4C4C;
    }

    .white-mode {
        --text: #333333;
        --placeholder: #888888;
        --background: #FFFFFF;
        --primary: #E0E0E0;
        --secondary: #CCCCCC;
        --accent: #FF5C5C;
    }

    .layout-wrapper {
        --footer-height: 50px;
        --topbar-height: 75px;
        --page-padding: 1rem;
        display: flex;
        flex-direction: column;
        height: 100vh;
        height: 100svh;
        background: var(--background);
        color: var(--text);
        overflow: hidden;
    }

        .layout-wrapper div, a, button, input, label {
            border-color: var(--text) !important;
            color: var(--text) !important
        }

        .layout-wrapper input {
            background-color: var(--primary);
        }

            .layout-wrapper input::placeholder {
                color: var(--placeholder);
            }

        .layout-wrapper button {
            background-color: var(--primary);
        }

            .layout-wrapper button:hover {
                background-color: var(--secondary);
            }

            .layout-wrapper button.active {
                background-color: var(--secondary);
            }

        .layout-wrapper .nav-links a.active {
            text-decoration: underline var(--accent);
        }

        .layout-wrapper .selection-item:hover {
            background: var(--secondary)
        }

        .layout-wrapper *::-webkit-scrollbar {
            width: 16px;
            height: 16px;
        }

        .layout-wrapper *::-webkit-scrollbar-thumb {
            background-color: var(--secondary);
            border-radius: 16px;
        }

        .layout-wrapper *::-webkit-scrollbar-track {
            background-color: var(--primary);
        }

        .layout-wrapper *::-webkit-scrollbar-corner {
            background-color: transparent;
        }

        .layout-wrapper .brand a {
            background: linear-gradient(to right, var(--text) 0%, var(--accent) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

    .topbar {
        background: var(--background);
        border-bottom: 1px solid var(--text);
        height: var(--topbar-height);
        min-height: var(--topbar-height);
        flex-shrink: 0;
        z-index: 1000;
    }

    .main-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        overflow-y: auto;
        overflow-x: hidden;
        -webkit-overflow-scrolling: touch;
    }

    .bottombar {
        border-top: 1px solid var(--text);
        height: var(--footer-height);
        min-height: var(--footer-height);
        flex-shrink: 0;
        padding: 1rem;
        text-align: center;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    @@media (max-width: 450px) {
        .layout-wrapper

    {
        --footer-height: 75px;
        --topbar-height: 75px;
        --page-padding: 0.5rem;
    }

    }

    @@media (max-width: 768px) {
        .main-content

    {
        overscroll-behavior-y: contain;
    }

    }

    html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        overflow: hidden;
    }
</style>